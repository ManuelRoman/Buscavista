{#Página del formulario de logueo#}
{% extends "BuscadorBundle::baseAdmin.html.twig" %}
{% block content %}
	<div class="row">
    	<div class="col-md-8 col-md-offset-2">
        	<h2>Indentificate</h2><hr/>
        	{# Mensaje FlashBag #}
        	{% for message in app.session.flashbag().get('status') %}
        		<div class="alert alert-success">{{ message }}</div>
        	{% endfor %}
        	<!-- Formulario de logueo el actión va al sistema de logueo de Symfony -->
        	<form action="{{path("login_check")}}" method="post">
        		<label>Email:</label>
        		<input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required"/>
        		<label>Contrase&ntilde;a</label>
        		<input type="password" id="password" name="_password" class="form-control" required="required"/><br/>
        		<input type="submit" value="Entrar" class="btn btn-default"/>
        		<!-- Cuando se hace login por defecto nos dirife a /, lo modificamos con el hidden -->
        		<input type="hidden" name="_target_path" value="/admin/inicio" />
        	</form>
        </div>
	</div>
{% endblock %}